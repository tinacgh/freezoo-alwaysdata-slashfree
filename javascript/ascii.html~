<textarea id="the_key" cols="73" rows="5"></textarea>
    <script>
var seed = 2 + Math.floor(Math.random() * (45));
var ta = document.getElementById("the_key");
for(var i = 48; i <= 57; i++) {
    ta.value += String.fromCharCode(i) + ": " + (i - seed) + "  ";
}
ta.value += "\n";
for(var i = 97; i <= 122; i++) {
    if(i == 107 || i == 117) {
        ta.value += "\n";
    }
    ta.value += String.fromCharCode(i) + ":";
    if((i - seed) < 100) {
        ta.value += " ";
    } 
    ta.value += (i - seed) + "  ";
}

function do_() {
    var arr = document.getElementById("in").value.split(" ");
    arr = arr.map(function(x) { return parseInt(x) + seed; })
    document.getElementById("out").value = String.fromCharCode.apply(null, arr);
    document.getElementById("in").value = "";
}
    </script>
