  <body>
    Enter numbers separated by spaces.<br>
    <input type="text" id="in" onkeydown="if (event.keyCode == 13) do_();">
    <button id="act" onclick="do_();">&gt;&gt;</button>
    <input type="text" id="out">
    <input type="reset" onclick="document.getElementById('out').value=''; document.getElementById('in').value=''; document.getElementById('in').focus();">
